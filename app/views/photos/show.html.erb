<% @stylesheet = "show" %>
<div class="large_image">
  <%= image_tag( photo_root_directory + "/" + @photo.image_dir + "/" + @photo.image_url )%>
</div>
<% if session[:user_id] %>
  <%= link_to 'Edit', edit_photo_path(@photo) %> 
<% end %>
<div class="image_info">
	<ul>
	  <li><%= @photo.exifdate.strftime("%b %Y") %></li>	  
	  <li>ISO: <%= @photo.exif.iso %></li>
	  <li>Shutter: <%= @photo.exif.shutterspeed %></li>
	  <li>Aperture: <%= @photo.exif.aperture %></li>
	  <li>Focal Length: <%= @photo.exif.focallength %></li>
  </ul>
  <p>Description: <%=h @photo.description %></p>
</div>