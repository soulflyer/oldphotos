<% @stylesheet = "show" %>
<div class="large_image">
  <%= image_tag( photo_root_directory + "/" + @photo.image_dir + "/" + @photo.image_url )%>
</div>
<% if session[:user_id] %>
  <%= link_to 'Edit', edit_photo_path(@photo) %> 
<% end %>
<div class="image_info">
	<p>
	  <b>Description:</b>
	  <%=h @photo.description %>
  </p>
</div>