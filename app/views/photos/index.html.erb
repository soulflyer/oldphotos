<h1>Listing photos</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th>Image url</th>
  </tr>

<% for photo in @photos %>
  <tr>
    <td><%=h photo.title %></td>
    <td><%=h photo.description %></td>
    <td><%=h photo.image_url %></td>
    <td><%=h photo.image_dir %></td>
    <td><%= link_to 'Show', photo %></td>
    <td><%= link_to 'Edit', edit_photo_path(photo) %></td>
    <td>
	    <a href="<%="/images/photos/" + photo.image_dir + "/" + photo.image_url %>"> <%= image_tag("/images/photos/" + photo.image_dir + "/thumbs/" + photo.image_url, :alt => photo.description)  %></a>
	  </td>
    <td><%= link_to 'Destroy', photo, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New photo', new_photo_path %>
